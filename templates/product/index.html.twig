{% extends 'base.html.twig' %}

{% block title %}Product List{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold mb-6">Products</h1>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {% for product in products %}
                <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                    {% if product.imagepath %}
                        <img src="{{ asset('/uploads/images/' ~ product.imagepath) }}"
                             alt="{{ product.name }}"
                             class="w-full h-56 object-cover">
                    {% else %}
                        <div class="w-full h-48 bg-gray-200 flex items-center justify-center text-gray-500">
                            No Image
                        </div>
                    {% endif %}

                    <div class="p-4">
                        <h2 class="text-xl font-bold mb-2">{{ product.name }}</h2>
                        <p class="text-gray-600 mb-2">Type: {{ product.type }}</p>
                        <p class="text-gray-600 mb-4">Quantity: {{ product.quantity }}</p>

                        <div class="flex justify-between">
                            <a href="{{ path('product_edit', {'id': product.id}) }}"
                               class="text-indigo-600 hover:text-indigo-900">Edit</a>
                            <a href="{{ path('product_delete', {'id': product.id}) }}"
                               class="text-red-600 hover:text-red-900">Delete</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="mt-6">
            <a href="{{ path('product_create_web') }}"
               class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
                Create Product
            </a>
        </div>
    </div>
{% endblock %}